{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Backend: Dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/packages/backend"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Starting Offline.*",
          "endsPattern": ".*Server ready.*|.*Offline listening.*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Shared: Build (Watch)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/packages/shared",
        "env": {
          "TSC_WATCHFILE": "UseFsEventsWithFallbackDynamicPolling",
          "TSC_NONPOLLING_WATCHER": "UseFsEvents"
        }
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "applyTo": "closedDocuments",
        "fileLocation": ["relative", "${workspaceFolder}/packages/shared"],
        "pattern": {
          "regexp": "^([^\\s].*)[\\(:](\\d+)[,:](\\d+)(?:\\):|:)\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "code": 5,
          "message": 6
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}(\\s+AM| PM)? - File change detected\\. Starting incremental compilation\\.\\.\\.",
          "endsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}(\\s+AM| PM)? - (Compilation complete\\.|Found \\d+ errors?\\. Watching for file changes\\.)"
        }
      },
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "focus": false,
        "clear": false
      },
    },
    {
      "label": "Shared-React: Build (Watch)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/packages/shared-react",
        "env": {
          "TSC_WATCHFILE": "UseFsEventsWithFallbackDynamicPolling",
          "TSC_NONPOLLING_WATCHER": "UseFsEvents"
        }
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "applyTo": "closedDocuments",
        "fileLocation": ["relative", "${workspaceFolder}/packages/shared-react"],
        "pattern": {
          "regexp": "^([^\\s].*)[\\(:](\\d+)[,:](\\d+)(?:\\):|:)\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "code": 5,
          "message": 6
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}(\\s+AM| PM)? - File change detected\\. Starting incremental compilation\\.\\.\\.",
          "endsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}(\\s+AM| PM)? - (Compilation complete\\.|Found \\d+ errors?\\. Watching for file changes\\.)"
        }
      },
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "focus": false,
        "clear": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "dependsOn": ["Shared: Build (Watch)"]
    }
  ]
}
