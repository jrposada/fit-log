{
  "compilerOptions": {
    "target": "ES2023",
    "useDefineForClassFields": true,
    "module": "Es2020",
    "lib": ["ES2020"],
    "skipLibCheck": true,

    /* Bundler mode */
    "composite": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,

    /* Path aliases */
    "paths": {}
  },
  "include": ["src/**/*.ts", "src/**/*.json"]
}
